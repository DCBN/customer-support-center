{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "API",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2019",
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true
      },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  